<?php

/**
 * Implements hook_taxonomy_term_presave().
 */
function uuid_taxonomy_term_presave($term) {
  if (empty($term->uuid)) {
    $term->uuid = uuid_uuid();
  }
}

/**
 * Find a taxonomy term id by its UUID.
 */
function uuid_taxonomy_term_find($uuid) {
  return uuid_find($uuid, 'taxonomy_term_data', 'tid');
}

